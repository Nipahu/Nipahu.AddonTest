<Application x:Class="Nipahu.AddonTest.AddonDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Nipahu.AddonTest.Core.Views;assembly=Nipahu.AddonTest.Core"
             xmlns:addon="clr-namespace:Nipahu.AddonTest.AddonDemo.Addon"
             Startup="App_OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <addon:WindowAddon x:Key="MainWindowAddons" Source="Views\MainWindowAddons.xaml"
                               WindowType="{x:Type views:MainWindow}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>